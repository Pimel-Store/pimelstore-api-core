{
  "version": 2,
  "builds": [
    { "src": "api/auth/*.ts", "use": "@vercel/node" },
    { "src": "api/register/*.ts", "use": "@vercel/node" },
    { "src": "api/sales/*.ts", "use": "@vercel/node" },
    { "src": "api/viewers/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/register", "dest": "api/register/register.ts", "methods": ["POST"]},
    { "src": "/login", "dest": "api/auth/login.ts", "methods": ["POST", "OPTIONS"]},
    { "src": "/token", "dest": "api/auth/token.ts", "methods": ["GET", "OPTIONS"]},
    { "src": "/sales", "dest": "api/sales/createSale.ts", "methods": ["POST"]},
    { "src": "/sales", "dest": "api/sales/getSales.ts", "methods": ["GET"]},
    { "src": "/sales/(?<id>[^/]+)", "dest": "api/sales/deleteSales.ts", "methods": ["DELETE"]},
    { "src": "/sales", "dest": "api/sales/deleteSales.ts", "methods": ["DELETE"]},
    { "src": "/sales/(?<id>[^/]+)", "dest": "api/sales/getSalesById.ts", "methods": ["GET"]},
    { "src": "/sales/(?<id>[^/]+)", "dest": "api/sales/updateSales.ts", "methods": ["PUT"]},
    { "src": "/dashboard", "dest": "api/viewers/dashboard.ts", "methods": ["GET"]}
  ]
}
